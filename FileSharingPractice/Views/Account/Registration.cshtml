@model FileSharingPractice.Models.RegistrationViewModels
@inject IViewLocalizer Localize

@{
    ViewData["Title"] = @Localize["Title"];
}
<hr />
<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area" style="padding-top:0px">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>@Localize["Title"]</h2>
                            </div>
                        </div>
                    </div>
                    <!-- Start Registration -->
                    <div class="mu-contact-content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form id="contact" method="post" class="mu-contact-form" asp-action="Registration" asp-controller="Account" asp-route-RetuUurl="@Context.Request.Query["Returnurl"]">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <span class="fa fa-envelope "></span>
                                            <input type="text" asp-for="FirstName" class="form-control" placeholder=@Localize["FirstName"] id="FirstName" required>
                                            <span asp-validation-for="FirstName"></span>
                                        </div>
                                        <div class="form-group">
                                            <span class="fa fa-envelope "></span>
                                            <input type="text" asp-for="LastName" class="form-control" placeholder=@Localize["LastName"] id="LastName" required>
                                            <span asp-validation-for="LastName "></span>
                                        </div>  <div class="form-group">
                                            <span class="fa fa-envelope mu-contact-icon"></span>
                                            <input type="email" asp-for="Email" class="form-control" placeholder=@Localize["Email"] id="email" required>
                                            <span asp-validation-for="Email"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="Password" class="form-control" type="password" placeholder=@Localize["Password"] />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">

                                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder=@Localize["ConfirmPassword"] />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="mu-send-msg-btn"><span>@Localize["Submit"]</span></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End registration -->
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
