@inject IViewLocalizer Localize
@model FileSharingPractice.Models.LoginViewModels

@{
    ViewData["Title"] = "Login";
}

<!-- Start Contact -->
<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area" style="padding-top:0px">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>@Localize["Title"]</h2>
                            </div>
                        </div>
                    </div>
                    <!-- Start Contact Content -->
                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form id="contact" method="post" class="mu-contact-form" asp-action="Login" asp-controller="Account" asp-route-RetuUurl="@Context.Request.Query["Returnurl"]">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <span class="fa fa-envelope mu-contact-icon"></span>
                                            <input type="email" asp-for="Email" class="form-control" placeholder=@Localize["Email"] id="email" required>
                                            <span asp-validation-for="Email"></span>
                                        </div>

                                        <div class="form-group">
                                            
                                            <input asp-for="Password" class="form-control" type="password" placeholder=@Localize["Password"] />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="mu-send-msg-btn"><span>@Localize["Submit"]</span></button>

                                    </form>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-6" style="padding-top:15px">
                                    <a class="btn btn-outline-info" asp-action="ExternalLogin" asp-route-provider="Facebook" asp-controller="Account">
                                        Login With Facebook
                                    </a>
                                </div>
                                <div class="col-6" style="padding-top:15px">
                                    <a class="btn btn-outline-danger" asp-action="ExternalLogin" asp-route-provider="Google" asp-controller="Account">
                                        Login With Google
                                    </a>
                                </div>
                                <div class="col-6" style="padding-top:15px">
                                    <a class="btn btn-outline-danger" asp-action="ForgetPssword" asp-controller="Account">
                                        Forget Password
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Contact Content -->
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
