@model FileSharingPractice.Models.UserViewModel
@inject IViewLocalizer Localize
@{
    ViewData["Title"] = "Info";
}
@if (TempData["Success"] != null)
{
    <div class=" alert alert-success text-center">
        <strong>
            @TempData["Success"]
        </strong>
    </div>
}
<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area" style="padding-top:0px">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>@Localize["Manage"]</h2>
                            </div>
                        </div>
                    </div>
                    <!-- Start Registration -->
                    <div class="mu-contact-content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form id="contact" method="post" class="mu-contact-form" asp-action="Info" asp-controller="Account">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <span class="fa fa-envelope "></span>
                                            <input type="text" asp-for="FirstName" class="form-control" placeholder=@Localize["FirstName"] id="FirstName" required>
                                            <span asp-validation-for="FirstName"></span>
                                        </div>
                                        <div class="form-group">
                                            <span class="fa fa-envelope "></span>
                                            <input type="text" asp-for="LastName" class="form-control" placeholder=@Localize["LastName"] id="LastName" required>
                                            <span asp-validation-for="LastName "></span>
                                        </div>
                                        <div class="form-group">
                                            <span class="fa fa-envelope mu-contact-icon"></span>
                                            <input type="email" asp-for="Email" class="form-control" placeholder=@Localize["Email"] id="email" required>
                                            <span asp-validation-for="Email"></span>
                                        </div>
                                        <button type="submit" class="mu-send-msg-btn"><span>@Localize["Submit"]</span></button>
                                        @*<br />
                                            <br />
                                            <h2>@Localize["Manage"]</h2>
                                            <a class="btn btn-outline-primary">
                                                @Localize["ChangePassword"]
                                            </a>
                                            <br />
                                            <br />*@
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End registration -->
                </div>
            </div>
        </div>
    </div>
</section>
@*@{await Html.RenderPartialAsync("_ChangePasswordPartial",new ChangePasswordViewModel);}*@
@if (Model.HasPassword)
{
    <partial name="_ChangePasswordPartial" model="new ChangePasswordViewModel()" />
}
else
{

    <partial name="_AddPasswordPartial" model="new AddPasswordViewModel()" />
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
