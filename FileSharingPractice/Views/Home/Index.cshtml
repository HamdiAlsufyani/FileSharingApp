@inject IViewLocalizer localizer 
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>@localizer["Headeer"]</h1>
    <br />
    <div class=" containe">
    <div class="row justify-content-md-center">
        <div class=" col-md-8">
            <form asp-controller="Uploads" asp-action="Results">
                <div class="input-group mb-3 input-group-lg mb-3">
                    <input type="text" class="form-control" placeholder="File Name" name="Term" aria-label="Recipient's username" aria-describedby="button-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit" id="button-addon2">@localizer["button.Search"]</button>
                    </div>
                </div>
            </form>
            </div>
        <div class="col-md-12 text-center" style="margin-top:40px">
            <h2>@localizer["Popular"]</h2>
            <hr />
            <table class="table">
                <tbody>
                    @foreach (UploadViewModel  item in ViewBag.Popular)
                    {
                    <tr>
                        <td>

                            @if (item.ContentType.ToLower().StartsWith("image"))
                            {
                                <img src="/Uploads/@item.FileName" width=" 70" height=" 70" class=" img-thumbnail " alt="Alternate text" />
                            }
                        </td>
                        <td>@item.OriginalfileName</td>
                        <td><strong>@localizer["Download"]</strong> @item.DownloadCount</td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>
